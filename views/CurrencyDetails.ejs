<% layout('layout') -%>
<link rel="stylesheet" type="text/css" href="/css/currencydetails.css">
<link rel="stylesheet" type="text/css" href="/css/gridstyle.css">
<script type="text/javascript" src="/js/CurrencyDetails.js"></script>
<!------ Include the above in your HEAD tag ---------->

<div class="text-center">
  <div class="row">
  <h2>Currency rate Table</h2>
</div>
  <!-- Responsive table starts here -->
  <!-- For correct display on small screens you must add 'data-title' to each 'td' in your table -->
  <div class="table-responsive-vertical shadow-z-1">
  <!-- Table starts here -->
  <table id="table" class="table table-hover table-mc-light-blue">
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Buying Minimum</th>
          <th>Selling Maximum</th>
        </tr>
      </thead>
      <tbody>
          <%currencyList.forEach(function(Currency,i){%>
        <tr onclick="ShowPopup('<%= Currency.Id %>',event)">          
            <td data-title="SNo"><a><%= i + 1 %></a></td>
            <td data-title="Name" data-message="world"><%= Currency.Name %></td>
            <td data-title="Value"><%= Currency.BuyingMin %></td>  
            <td data-title="Value"><%= Currency.SellingMax %></td>          
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

</div>

  <!-- Modal -->
  <div class="modal fade" id="modalUpdateCurrency" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel">Update currency details</h4>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label for="txtCurrencyName" id=lblCurrencyName>Currency</label>
            <input class="form-control" id="txtCurrencyName" type="text">
          </div>
          <div class="form-group">
            <label for="txtBuyingMinimum" id=lblBuyingMinimum>Buying Minimum</label>
            <input class="form-control" id="txtBuyingMinimum" type="text">
          </div>
          <div class="form-group">
            <label for="txtSellingMaximum" id=lblSellingMaximum>Selling Maximum</label>
            <input class="form-control" id="txtSellingMaximum" type="text">
          </div>
        </div>
        <div class="modal-footer">
          <div class="form-group">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-primary" onclick="UpdateCurrencyDetails()">Update value</button>
          </div>
        </div>
      </div>
    </div>
  </div>
